<div class="icon icon-home">
    <a href="/lico" data-container="body" data-toggle="popover" data-trigger="hover" data-placement="bottom" data-content="List of all users"><img src="https://static.thenounproject.com/png/423483-200.png" class="user-icon"></a>
</div>
<!-- SHOW NOTIFICATION -->
<div class="dropdown icon">
    <% if(!currentUser.notification) { %>
    <img src="/images/notification.png" class="notification user-icon" type="button" id="dropdownMenu2"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <% } else { %>
    <img src="/images/notification-1.png" class="notification user-icon" type="button" id="dropdownMenu2"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <% } %>

    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">

        <div class="list-notification">
            <% if(currentUser.notification) { %>

            <% if(currentUser.notification.love) { %>
            <% currentUser.notification.love.forEach(item => { %>
            <p class="dropdown-item"><a href="/lico/<%=item.userLoveImage; %> "><%= item.userLoveImage; %></a> loved <a
                    href="/lico/<%= currentUser.userName; %>/<%= item.idImage; %>">your image</a></p>
            <% }); %>
            <% } %>

            <% if(currentUser.notification.comments) { %>
            <% currentUser.notification.comments.forEach(item => { %>
            <p class="dropdown-item"><a href="/lico/<%=item.userComment; %> "><%= item.userComment; %></a> commented <a
                    href="/lico/<%= currentUser.userName; %>/<%= item.idImage; %>">your image</a></p>
            <% }) %>
            <% } %>
            <% } %>
        </div>
        <!-- FORM CLEAR NOTIFICATION -->
        <form action="/api/<%= currentUser.userName; %>/notification" class="form-notification">
            <input type="submit" value="seen" class="seen" id='user&<%= currentUser.userName; %>'>
        </form>

    </div>

</div>
<div class="icon">
    <a href="/lico/<%= name; %>" data-container="body" data-toggle="popover" data-trigger="hover" data-placement="bottom" data-content="My account"><img
            src="https://icons-for-free.com/iconfiles/png/512/profile+user+icon-1320166082804563970.png"
            class="user-icon"></a>
</div>
<div class="icon">
    <a href="/lico/index" data-container="body" data-toggle="popover" data-trigger="hover" data-placement="bottom" data-content="All images"><img src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-image-512.png"
            class="user-icon"></a>
</div>
<div class="icon">
    <% if(name === currentUser.userName) { %>
    <a href="/lico/logout" data-container="body" data-toggle="popover" data-trigger="hover" data-placement="bottom" data-content="Log out"><img src="https://static.thenounproject.com/png/205237-200.png"
            class="logout-icon"></a>
    <% } %>
</div>